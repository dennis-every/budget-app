<section class='container'>
  <div class='text-end'>
    <%= link_to 'Add Expense', new_category_expense_path, class: 'btn btn-primary' %>
  </div>
  <h1>Expenses</h1>
  <% if @expenses.any? %>
    <ul>
      <% @expenses.each do |expense| %>
        <li><%= expense.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No expenses in this category</p>
  <% end %>
</section>
