<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <section class='devise'>
    <header>
      <%= link_to sanitize("&larr;"), root_path, class: 'icon' %>
      <h1>Change password</h1>
      <%= f.submit "Send", class: 'btn--ghost' %>
    </header>
    <main>
      <%= form_error_notification(resource) %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field border-top border-bottom">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password" %>
      </div>
      <div class="field border-bottom">
        <%= f.password_field :password_confirmation, placeholder: 'Confirmation', autocomplete: "new-password" %>
      </div>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </main>
  </section>
<% end %>
